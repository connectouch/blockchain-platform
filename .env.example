# =============================================================================
# CONNECTOUCH BLOCKCHAIN AI PLATFORM - ENVIRONMENT CONFIGURATION
# =============================================================================
#
# SECURITY WARNING: Never commit real API keys to version control!
# Copy this file to .env and replace placeholder values with real credentials
#
# =============================================================================

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# OpenAI Configuration (REQUIRED)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Application Configuration
NODE_ENV=development
PORT=3002
FRONTEND_URL=http://localhost:5173

# =============================================================================
# PORT CONFIGURATION
# =============================================================================

# Backend Services
WEBSOCKET_PORT=3003
HEALTH_PORT=3004

# Frontend Development
FRONTEND_DEV_PORT=5173
FRONTEND_PREVIEW_PORT=4173

# Blockchain Development
HARDHAT_PORT=8545
GANACHE_PORT=7545

# Database Services
POSTGRES_PORT=5432
REDIS_PORT=6379

# Monitoring Services
METRICS_PORT=9090
LOGS_PORT=9091

# =============================================================================
# SECURITY CONFIGURATION (IMPORTANT)
# =============================================================================

# JWT Secret (Generate a secure random string for production)
# Use: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# Session Secret (Generate a secure random string for production)
# Use: openssl rand -base64 32
SESSION_SECRET=your_session_secret_key

# =============================================================================
# DATABASE CONFIGURATION (OPTIONAL)
# =============================================================================

# PostgreSQL Database (Optional - enables persistent storage)
DATABASE_URL=postgresql://username:password@localhost:5432/connectouch_db

# Redis Cache (Optional - enables caching and session storage)
REDIS_URL=redis://localhost:6379

# =============================================================================
# BLOCKCHAIN API KEYS (OPTIONAL BUT RECOMMENDED)
# =============================================================================

# Alchemy API (Recommended for blockchain data)
# Get your API key from: https://dashboard.alchemy.com/
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Ethereum RPC URLs (Use with Alchemy API key)
ETHEREUM_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your_alchemy_key
POLYGON_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/your_alchemy_key

# Etherscan API (For contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key

# Additional DeFi Data APIs
COINGECKO_API_KEY=your_coingecko_api_key
THE_GRAPH_API_KEY=your_thegraph_api_key

# =============================================================================
# DEPLOYMENT CONFIGURATION (PRODUCTION ONLY)
# =============================================================================

# Private Key for Smart Contract Deployment (KEEP SECURE!)
PRIVATE_KEY=your_private_key_here_for_deployment

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================

# CORS Origins (Comma-separated list of allowed origins)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://localhost:3001

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING & MONITORING (OPTIONAL)
# =============================================================================

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/connectouch.log

# Error Tracking (Optional)
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Analytics (Optional)
MIXPANEL_TOKEN=your_mixpanel_token_for_analytics
GOOGLE_ANALYTICS_ID=your_google_analytics_id

# =============================================================================
# AI & TRADING CONFIGURATION (OPTIONAL)
# =============================================================================

# AI Analysis Settings
AI_ANALYSIS_INTERVAL=300000
AI_RISK_THRESHOLD=0.15
AI_MAX_POSITION_SIZE=0.1
AI_REBALANCE_THRESHOLD=0.05

# =============================================================================
# SMART CONTRACT ADDRESSES (TESTNET)
# =============================================================================

# DeFi Protocol Addresses (Sepolia Testnet)
UNISWAP_V3_FACTORY=0x1F98431c8aD98523631AE4a59f267346ea31F984
AAVE_LENDING_POOL=0x6Ae43d3271ff6888e7Fc43Fd7321a503ff738951
COMPOUND_COMPTROLLER=0x3d9819210A31b4961b30EF54bE2aeD79B9c9Cd3B

# =============================================================================
# NOTIFICATION CONFIGURATION (OPTIONAL)
# =============================================================================

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_for_external_integrations
DISCORD_WEBHOOK_URL=your_discord_webhook_for_notifications
